<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>

    {% block stylesheets %}
    <link 
        href="{{ asset("assets/main/css/style.css") }}" 
        rel="stylesheet">
    {% endblock %}

    {% block javascripts %}
    <script src="{{ asset("assets/framework/bootstrap-5.0.2/js/bootstrap.js") }}">
    </script>
    {% endblock %}

</head>

{% block body %}
<section class="vh-100">
    <div class="container-fluid" style="background-color: #198754;">
        <div class="row">

            <div class="col-sm-6 text-black d-flex align-items-center justify-content-center">
                <div class="">
                    <div class="px-5 ms-xl-4">
                        <span class="h1 fw-bold mb-0">
                            <svg class="img-fluid" alt="logo" version="1.1" 
                                id="Ebene_1" xmlns="http://www.w3.org/2000/svg" 
                                xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px"
                                viewBox="0 0 72.7 48.8" style="enable-background:new 0 0 72.7 48.8;" 
                                xml:space="preserve">
                                <style type="text/css">
                                    .st0{fill:white;}
                                </style>
                                <polygon class="st0" 
                                    points="25.3,10.9 20.7,26.8 20.6,26.8 15.9,10.9 6.9,10.9 6.9,36.6 
                                    12.2,36.6 12.2,15.7 18.4,36 22.8,36 
                                    29,15.7 29,36.6 34.3,36.6 34.3,10.9 "/>
                                <polygon class="st0" points="66.7,3.4 59.1,21.7 59.1,10.9 54,10.9 54,21.2 
                                    42.2,21.2 42.2,10.9 37.1,10.9 37.1,36.3 42.2,36.3 
                                    42.2,25.4 54,25.4 54,34.1 49.7,44.4 51.2,44.4 68.2,3.4 "/>
                            </svg>
                        </span>
                    </div>
                    <div class="d-flex align-items-center h-custom-2 px-5 ms-xl-4 mt-5 pt-2 pt-xl-0 mt-xl-n5">
            
                        <form method="post" style="width: 23rem;">

                            {% if error %}
                                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                            {% endif %}
            
                            <h3 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Anmelden</h3>
            
                            <div class="form-outline mb-4">
                                <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control form-control-lg"  required autofocus />
                                <label class="form-label" for="inputUsername">Username</label>
                            </div>
            
                            <div class="form-outline mb-4">
                                <input type="password" name="password" id="inputPassword" autocomplete="current-password" class="form-control form-control-lg" />
                                <label class="form-label" for="inputPassword">Passwort</label>
                            </div>

                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            
                            <div class="pt-1 mb-4">
                                <button class="btn btn-light btn-lg btn-block" type="submit">Anmelden</button>
                            </div>
            
                            <p>Haben Sie kein account? 
                                <a href="#!" class="link-light">Register here</a>
                            </p>
            
                        </form>
                    </div>
                </div>
            </div>

            <div class="col-sm-6 px-0 d-none d-sm-block">
                <img src="{{ asset('assets/main/images/bkgrnd.jpg') }}" alt="Login image" class="w-100 vh-100" style="object-fit: cover; object-position: left;">
            </div>

        </div>
    </div>
</section>
{% endblock %}
